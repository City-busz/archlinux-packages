#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-polkit
pkgver=1.3.0
pkgrel=1
pkgdesc="PolicyKit integration for the MATE desktop"
arch=('i686' 'x86_64')
url="http://www.freedesktop.org/wiki/Software/PolicyKit"
license=('LGPL')
depends=('polkit>=0.101' 'gtk2')
makedepends=('intltool' 'gobject-introspection')
options=('!emptydirs' '!libtool')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('a0c2e283bd54b7199975ff51a254e0c002d82dea4d94e08e01c9189d620e839a')

url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --libexecdir=/usr/lib/polkit-mate \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}
