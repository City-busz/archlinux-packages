pkgname=mate-file-manager-open-terminal
pkgver=1.6.0
pkgrel=3
pkgdesc="An extension for opening terminals in arbitrary local paths"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://manny.cluecoder.org/packages/nautilus-open-terminal"
license=('GPL')
depends=('gtk2' 'mate-desktop' 'mate-file-manager')
makedepends=('mate-common' 'perl-xml-parser')
install=mate-file-manager-open-terminal.install
options=('!libtool')
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha256sums=('9898d640aad99be84fbc42f3e2e4f90400939480f94ac5a1ed1a09475df944e8')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
    ./autogen.sh \
        --prefix=/usr
	make
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR="${pkgdir}" install
}
