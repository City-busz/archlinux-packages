#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=libmatenotify
pkgver=1.2.0
pkgrel=1
pkgdesc="Desktop notification library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk2' 'gobject-introspection')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://matsusoft.com.ar/projects/mate/"
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('930bb51cf26e1de3ac7795e61e8c6bf7603a98e33b13c7b42d75e79ef56c803f')


build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}
