pkgname=mate-file-manager
pkgver=1.6.2
pkgrel=3
pkgdesc="The MATE shell and file manager"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('dbus' 'desktop-file-utils' 'exempi' 'glib2' 'gobject-introspection'
         'gtk2' 'gvfs' 'libexif' 'libunique' 'libxml2' 'libx11' 'libxt'
         'libxrender' 'libxext' 'mate-desktop' 'mate-icon-theme' 'pangox-compat'
         'shared-mime-info' 'startup-notification')
makedepends=('mate-common')
optdepends=('gstreamer0.10-good-plugins: automatic media playback when mouseover')
options=('!emptydirs' '!libtool')
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha256sums=('c1df364fa72ca7e37faf2124cecd90d6d1be9532030d11d2d7bbe2aa93db74f3')
install=${pkgname}.install

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure \
        --prefix=/usr \
        --libexecdir=/usr/lib/caja \
        --enable-unique \
        --enable-introspection \
        --disable-static \
        --disable-update-mimedb
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
