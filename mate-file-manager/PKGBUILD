#Contributor: Xpander <xpander0@gmail.com>

pkgname=mate-file-manager
pkgver=1.6.2
pkgrel=2
pkgdesc="The MATE shell and file manager"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('libexif' 'exempi' 'mate-icon-theme' 'shared-mime-info'
         'desktop-file-utils' 'gvfs' 'libunique' 'mate-desktop')
makedepends=('pkgconfig' 'intltool')
optdepends=('gstreamer0.10-good-plugins')
url="http://mate-desktop.org"
options=('!libtool' '!emptydirs')
install=mate-file-manager.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('c1df364fa72ca7e37faf2124cecd90d6d1be9532030d11d2d7bbe2aa93db74f3')

groups=('mate')

build() {
    cd "${srcdir}/$pkgname-$pkgver"

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --libexecdir=/usr/lib/caja \
        --enable-unique \
        --disable-update-mimedb || return 1

    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
}
