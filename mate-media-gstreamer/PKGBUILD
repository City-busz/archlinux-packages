# Contributor: Martin Wimpress <code@flexion.org>

_pkgname=mate-media
pkgname=${_pkgname}-gstreamer
pkgver=1.7.0
pkgrel=1
pkgdesc="MATE Media Tools (GStreamer)"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('desktop-file-utils' 'gstreamer0.10-base-plugins' 'libnotify'
         'mate-panel' 'mate-settings-daemon-gstreamer')
makedepends=('mate-settings-daemon' 'mate-icon-theme' 'perl-xml-parser' 'yelp-tools')
options=('!emptydirs' '!libtool')
conflicts=("${_pkgname}-pulseaudio" 'mate-settings-daemon-pulseaudio')
provides=("${_pkgname}")
source=(http://pub.mate-desktop.org/releases/1.7/${_pkgname}-${pkgver}.tar.xz
        enable_deprecated.diff)
sha1sums=('32730c0c5ca20d41f11390a154875a1220d9ba9c'
          'f0e38578aacacf9ee852b7a44a34908cc230b91f')
install=${pkgname}.install

prepare() {
    cd ${srcdir}/${_pkgname}-${pkgver}   
    patch -p1 < ../../enable_deprecated.diff gst-mixer/src/Makefile.am    
}

build() {
	cd ${srcdir}/${_pkgname}-${pkgver}    
    ./configure \
        --prefix=/usr \
        --libexecdir=/usr/lib/${_pkgname} \
        --sysconfdir=/etc \
        --enable-polkit \
        --enable-gstreamer \
        --disable-pulse \
        --disable-static
    make
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install
}
