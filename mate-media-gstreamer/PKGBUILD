_pkgname=mate-media
pkgname=${_pkgname}-gstreamer
pkgver=1.6.0
pkgrel=1
pkgdesc="MATE Media Tools (GStreamer)"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('desktop-file-utils' 'gstreamer0.10-base-plugins' 'libnotify' 'mate-panel')
makedepends=('mate-doc-utils' 'mate-settings-daemon' 'mate-icon-theme' 'perl-xml-parser')
options=('!emptydirs' '!libtool')
groups=('mate')
conflicts=('mate-media-pulseaudio')
provides=('mate-media')
source=(http://pub.mate-desktop.org/releases/1.6/${_pkgname}-${pkgver}.tar.xz
        enable_deprecated.diff)
sha1sums=('06c3418dfe0be26e74b0e40aa92eea6260579a72'
          'f0e38578aacacf9ee852b7a44a34908cc230b91f')          
install=${pkgname}.install

build() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    
    # Enable deprecated
    patch -p1 < ../../enable_deprecated.diff gst-mixer/src/Makefile.am

	./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
		--libexecdir=/usr/lib/${_pkgname} \
		--localstatedir=/var \
		--enable-gstmix \
		--enable-gst-mixer-applet \
		--disable-pulseaudio \
		--disable-static \
		--disable-scrollkeeper
	make
}

package() {
    cd ${srcdir}/${_pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
