pkgname=mate-conf
pkgver=1.2.1
pkgrel=1
pkgdesc="A configuration database system"
arch=(i686 x86_64)
license=('LGPL')
depends=('mate-corba' 'libxml2' 'polkit' 'libldap' 'dbus-glib' 'gtk2')
makedepends=('pkgconfig' 'intltool' 'gtk-doc' 'gobject-introspection')
groups=('mate')
options=('!libtool')
install=mate-conf.install
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz
        mateconf-merge-schema
        mateconfpkg)
sha256sums=('343576f6d96fc432218cbf3ed4f009f7fa8e4ec17683c76ffe2272797d540ce0'
            '78ccdb9c963400694c944ee193b2fa135dcb39e0d9f1dc393fa659131d591076'
            '2e06a02b5312ee7853be356c1b0131ce6e85fb2949c4aef54c1e795f27fdc1dd')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    # Python2 fix
<<<<<<< HEAD
#    sed -i '1s|#!/usr/bin/env python$|&2|' mateconf/mateconf-schema-convert
=======
    #sed -i '1s|#!/usr/bin/env python$|&2|' gsettings/mateconf-schema-convert
>>>>>>> 6c6262f950f5f47876dd0015c09f7b7ba85d640e
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --libexecdir=/usr/lib/MateConf \
        --localstatedir=/var \
        --disable-static \
        --enable-defaults-service --enable-mateconf-backend=no || return 1
    # --with-gtk=3.0
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
    install -m755 -d "${pkgdir}/etc/mateconf/mateconf.xml.system" || return 1
    install -m755 "${srcdir}/mateconf-merge-schema" "${pkgdir}/usr/bin/" || return 1
    install -d -m755 "${pkgdir}/usr/sbin"
    install -m755 "${srcdir}/mateconfpkg" "${pkgdir}/usr/sbin/" || return 1
}
