#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-themes
pkgver=1.2.0
pkgrel=1
pkgdesc="Default themes for the MATE desktop"
arch=('i686' 'x86_64')
license=('GPL')
depends=('gtk2' 'gtk-engines')
makedepends=('intltool')
replaces=('gnome-themes')
conflicts=('gnome-themes')
options=('!emptydirs' '!libtool')
url="http://mate-desktop.org"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('d706160216ba6bb08d7ae6ac2fa7ddea1aa8205f703f20e0c7fe948bd31b1c7e')


build() {
    cd "${srcdir}/$pkgname-$pkgver"

    ./autogen.sh \
        --prefix=/usr \
        --enable-all-themes \
        --disable-placeholders || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install || return 1
}
