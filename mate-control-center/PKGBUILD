pkgname=mate-control-center
pkgver=1.6.1
pkgrel=1
pkgdesc="The Control Center for MATE"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('mate-window-manager' 'libxss' 'desktop-file-utils'
         'mate-settings-daemon' 'libmatekbd' 'libcanberra'
         'sound-theme-freedesktop' 'libunique' 'mate-menus'
         'librsvg') #  'evolution-data-server>=2.29.92'
makedepends=('mate-doc-utils' 'pkgconfig' 'intltool')
options=('!emptydirs' '!libtool')
url="http://mate-desktop.org"
groups=('mate')
install=mate-control-center.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('1e6fce881187d99f46eee2bf304b55fd74c60cb1ecaf687c709b1477122c1220')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --sbindir=/usr/bin \
        --disable-static \
        --disable-scrollkeeper \
        --enable-aboutme \
        --disable-update-mimedb || return 1
       make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
   #don't include mime cache
    rm -f  "${pkgdir}/usr/share/applications/mimeinfo.cache"
}
