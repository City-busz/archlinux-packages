post_install() {
    gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
    if [ -n "${DISPLAY}" ]; then
        mcm-prefs --sync
    fi
}

pre_upgrade() {
    pre_remove
}

post_upgrade() {
    post_install
}

pre_remove() {
    :
}

post_remove() {
    gtk-update-icon-cache -q -t -f /usr/share/icons/hicolor
}
