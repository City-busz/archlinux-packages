#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=python-caja
pkgver=1.2.0
pkgrel=1
pkgdesc="Python binding for Cahja components"
arch=('i686' 'x86_64')
url="http://matsusoft.com.ar/projects/"
license="GPL"
groups=('mate-extras')
makedepends=('pkgconfig' 'python-mate' )
depends=('mate-file-manager' 'pygtk')
options=('!libtool' '!emptydirs')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('befa849b10303d62f09ad593ac202767c4f4b5aa562c39ab999b5dbe27559c25')

build() {
	export PYTHON=python2
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-$pkgver"

	make DESTDIR="$pkgdir" install || return 1
}
