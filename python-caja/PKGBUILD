#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=python-caja
pkgver=1.4.0
pkgrel=1
pkgdesc="Python binding for Cahja components"
arch=('i686' 'x86_64')
url="http://mate-desktop.org"
license="GPL"
groups=('mate-extras')
makedepends=('pkgconfig' 'python-mate' )
depends=('mate-file-manager' 'pygtk')
options=('!libtool' '!emptydirs')
source=(http://pub.mate-desktop.org/releases/1.4/$pkgname-$pkgver.tar.xz)
sha256sums=('4e739358fb8b14845ee7084e88cf4bc006ce28f050d7c32b1196255a26f8f236')

build() {
	export PYTHON=python2
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static 
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-$pkgver"

	make DESTDIR="$pkgdir" install || return 1
}
