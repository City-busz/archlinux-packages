pkgname=libmateweather
pkgver=1.6.2
pkgrel=2
pkgdesc="Provides access to weather information from the net"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('LGPL')
depends=('glib2' 'gtk2' 'gtk-update-icon-cache' 'libsoup' 'libxml2' 'pygtk'
         'python2-gobject2')
makedepends=('mate-common')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://mate-desktop.org"
install=libmateweather.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('2b8c13d448011f1f6ddedcbff5498d5ae6f34cc6330c36010ba25d4062aeda60')


build() {
    cd "${srcdir}/$pkgname-$pkgver"
    PYTHON=python2 ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --enable-locations-compression || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
}
