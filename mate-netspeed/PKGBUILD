pkgname=mate-netspeed
pkgver=1.6.0
pkgrel=3
pkgdesc="Netspeed is a MATE-applet that shows how much traffic occurs on a specified network device."
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://mate-desktop.org"
license=('GPL')
groups=('mate-extras')
depends=('gtk2' 'libgtop' 'mate-panel' 'wireless_tools')
makedepends=('mate-common' 'mate-doc-utils' 'perl-xml-parser')
install=$pkgname.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('91b90a85983d119fd40006b47847c737ad1c27836894355fb387adbca8250634') 

build() {
    cd $srcdir/$pkgname-$pkgver
    ./autogen.sh \
        --prefix=/usr \
        --libexecdir=/usr/lib/$pkgname \
        --disable-static \
        --disable-scrollkeeper
  make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}
