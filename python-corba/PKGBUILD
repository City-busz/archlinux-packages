#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=python-corba
pkgver=1.4.0
pkgrel=1
pkgdesc="Python binding for Mate CORBA"
arch=('i686' 'x86_64')
url="http://mate-desktop.org"
license="GPL"
depends=('python2' 'mate-corba')
makedepends=('pkgconfig')
options=('!emptydirs')
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.4/$pkgname-$pkgver.tar.xz)
sha256sums=('275570e06e3bd39e705790f24d6a492b0272fb83304b47deb08361500d63e0e5')

build() {
	export PYTHON=python2
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static

	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-$pkgver"

	make DESTDIR="$pkgdir" install || return 1
}
