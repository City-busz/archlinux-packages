pkgname=python-corba
pkgver=1.2.0
pkgrel=1
pkgdesc="Python binding for Mate CORBA"
arch=('i686' 'x86_64')
url="http://matsusoft.com.ar/projects/"
license="GPL"
depends=('python2' 'mate-corba')
makedepends=('pkgconfig')
options=('!emptydirs')
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('4daec3479cf78e70f7fe65c46e91a80a3be9255ca09b4eb1d9df4be2bdcbe05a')

build() {
	export PYTHON=python2
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-$pkgver"

	make DESTDIR="$pkgdir" install || return 1
}
