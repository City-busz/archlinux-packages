#Contributor: Xpander <xpander0@gmail.com>

pkgname=mate-sensors-applet
pkgver=1.6.0
pkgrel=3
pkgdesc="An applet for the MATE Panel to display readings from hardware sensors, including CPU temperature, fan speeds and voltage readings under Linux"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://mate-desktop.org"
license=('GPL')
groups=('mate-extras')
depends=('cairo' 'dbus' 'glib2' 'gtk2' 'libatasmart' 'libnotify' 'libxnvctrl'
         'lm_sensors' 'mate-panel' )
makedepends=('docbook-xml' 'mate-common' 'mate-doc-utils' 'rarian')
options=('!libtool')
install=$pkgname.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('34b1484479206a86d332112018c6fcbe7712e12856d1137b2f202cc196db4f71')

build() {
    cd $srcdir/$pkgname-$pkgver
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --libexecdir=/usr/lib/$pkgname \
        --disable-static \
        --disable-scrollkeeper
  make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}
