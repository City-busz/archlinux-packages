pkgname=mate-dialogs
pkgver=1.1.0
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=(i686 x86_64)
license=('LGPL')
depends=('libmatenotify')
makedepends=('intltool' 'gtk-doc' 'mate-doc-utils')
url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')
provides=('zenity')
conflicts=('zenity')
options=('!emptydirs' '!libtool')
source=(./${pkgname}/${pkgname}-${pkgver}.tar.gz)
sha256sums=('4c375bf28b511401c4cffb22c874c43f9fb0a3748c16a18823f1dc66a4864897')


build() {
    cd "${srcdir}/$pkgname"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --disable-scrollkeeper || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname"

    make DESTDIR="${pkgdir}" install
    # hax!
    ln -s matedialog ${pkgdir}/usr/bin/zenity
}
