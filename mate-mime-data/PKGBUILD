#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-mime-data
pkgver=1.2.0
pkgrel=1
pkgdesc="The base MIME and Application database for MATE"
arch=('any')
license=('GPL')
depends=('shared-mime-info')
makedepends=('intltool')
url="http://mate-desktop.org"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('785ebb32f058fe25213d781a9f62658656c0e45cf433445e268be7346e36a5ee')


build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh --prefix=/usr --sysconfdir=/etc --localstatedir=/var || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install

    install -m755 -d "${pkgdir}/usr/lib"
    mv "${pkgdir}/usr/share/pkgconfig" "${pkgdir}/usr/lib/"
}
