pkgname=mate-common
pkgver=1.2.1
pkgrel=1
pkgdesc="Common development macros for MATE"
arch=('any')
license=('GPL')
depends=()
makedepends=()
options=('!libtool')
url="http://matsusoft.com.ar/projects/mate/"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('3b621b86b4d18b870595c487b6edde4d9f6fcdf61db3bc1a03c869fb4034bd7b')


build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}
