#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=libmatekeyring
pkgver=1.3.0
pkgrel=1
pkgdesc="MATE keyring client library"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('libgcrypt') # 'eggdbus' 'mate-keyring'
makedepends=('intltool' 'pkgconfig' 'python')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.3/$pkgname-$pkgver.tar.xz)
sha256sums=('00c89ec92232de15410909c78df122df0f4139e8bc5d85fbef66bf70997197bb')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --libexecdir=/usr/lib/mate-keyring || return 1

    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
}
