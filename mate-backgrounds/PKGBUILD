#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-backgrounds
pkgver=1.3.0
pkgrel=1
pkgdesc="Background images and data for MATE"
arch=('any')
license=('GPL')
url="http://mate-desktop.org"
makedepends=('intltool' 'mate-common')
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('7605775808884cb8c60ed6abe2501068a4955c66839d3e8aae306cf108d20b4c')



build() {
	cd "${srcdir}/$pkgname-$pkgver"

	./autogen.sh \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var || return 1

	make || return 1
}

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir" install || return 1
}
