#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=libmatecanvas
pkgver=1.4.0
pkgrel=1
pkgdesc="The MATE Canvas library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libglade' 'libart-lgpl' 'libmate')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
groups=('mate')
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.4/$pkgname-$pkgver.tar.xz)
sha256sums=('ff0032d53409d1b6a4c029eb18c9d85efa44c5d1ea6ece535faa564b0c73a425')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr --disable-static \
	    --enable-glade || return 1
    #--with-gtk=3.0
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install
}
