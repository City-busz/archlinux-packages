#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=libmatecanvas
pkgver=1.2.0
pkgrel=1
pkgdesc="The MATE Canvas library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libglade' 'libart-lgpl' 'libmate')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
groups=('mate')
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('7d3897a692c3ab31cce24a194b921987a6c06b2bbb68c78724c9f0240e9e74a3')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr --disable-static \
	    --enable-glade || return 1
    #--with-gtk=3.0
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install
}
