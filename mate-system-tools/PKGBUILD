#Mantainer: Giovanni "Talorno" Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-system-tools
pkgver=1.6.0
pkgrel=3
pkgdesc="An extension for opening terminals in arbitrary local paths"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://manny.cluecoder.org/packages/nautilus-open-terminal"
license=('GPL')
depends=('glib2' 'gtk2' 'liboobs' 'mate-file-manager' 'mate-polkit'
         'system-tools-backends')
makedepends=('mate-common' 'mate-doc-utils' 'perl-xml-parser')
optdepends=('ntp: Automatic time syncronisation.')
install=mate-system-tools.install
options=('!libtool')
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('3e545ae4462332cd4e4b1c0b2f0e41a7fbacbb86be3e95254155e92ed249a14a')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --disable-scrollkeeper \
        LIBS="-lm" # Required for MATE 1.6 but can be remove in 1.7/1.8
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}
