# Contributor: Martin Wimpress <code@flexion.org>

pkgname=mate-window-manager
pkgver=1.6.2
pkgrel=2
pkgdesc="A window manager for MATE"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('gtk2' 'libcanberra' 'libgtop' 'libice' 'libsm' 'libx11' 'libxcomposite'
         'libxcursor' 'libxdamage' 'libxext' 'libxfixes' 'libxinerama' 'libxrandr'
         'libxrender' 'libxt' 'mate-dialogs' 'pango' 'startup-notification')
makedepends=('mate-common' 'mate-doc-utils')
options=('!emptydirs' '!libtool')
install=mate-window-manager.install
url="http://mate-desktop.org"
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha256sums=('d4c887c7de76073409bf653701ae1d16d17ca5205776fd4dcc952cb3128120e1')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --enable-startup-notification \
        --disable-static \
        --disable-scrollkeeper
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
