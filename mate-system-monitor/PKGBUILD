# Contributor: Martin Wimpress <code@flexion.org>

pkgname=mate-system-monitor
pkgver=1.6.1
pkgrel=2
pkgdesc="A system monitor for MATE"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('dbus' 'glib2' 'glibmm' 'gtk2' 'gtkmm' 'libgtop' 'libmatewnck' 'librsvg'
         'libxml2' 'mate-icon-theme')
makedepends=('docbook2x' 'mate-common' 'mate-doc-utils' 'perl-xml-parser')
groups=('mate-extras')
options=(!emptydirs !libtool)
url="http://mate-desktop.org"
install=mate-system-monitor.install
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha256sums=('c49fc4ec245c869ddd5e464e560d368c6090ab2bf617c6ba9ceb84c3c7a66348')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure \
        --prefix=/usr \
		--libexecdir=/usr/lib/${pkgname} \
		--localstatedir=/var \
		--disable-static \
		--disable-scrollkeeper
    make clean
	make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
