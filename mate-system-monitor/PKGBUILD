#Mantainer: Giovanni Ricciardi <kar98k.sniper@gmail.com>

pkgname=mate-system-monitor
pkgver=1.2.0
pkgrel=1
pkgdesc="A system monitor for MATE"
arch=(i686 x86_64)
license=('GPL')
depends=('libwnck' 'libgtop' 'gtkmm' 'librsvg' 'mate-icon-theme')
makedepends=('mate-doc-utils' 'pkgconfig' 'intltool')
groups=('mate-extras')
options=(!emptydirs !libtool)
url="http://mate-desktop.org"
install=mate-system-monitor.install
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('6946c0e676a13a558725e30fe89b5293ab985126c754b08dc3579ad54a67e61a')

build() {
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh
	./configure --prefix=/usr --sysconfdir=/etc \
		--libexecdir=/usr/lib/${pkgname} \
		--localstatedir=/var --disable-static \
		--disable-scrollkeeper \
		--disable-schemas-install || return 1

	# there is some pre-compiled files on the tar
	make clean
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}-$pkgver"

	make MATECONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1
	#rm -f ${pkgdir}/usr/lib/*.la # can be used options=(!libtools)

	install -m755 -d "${pkgdir}/usr/share/mateconf/schemas"
	mateconf-merge-schema "${pkgdir}/usr/share/mateconf/schemas/${pkgname}.schemas" --domain ${pkgname} ${pkgdir}/etc/mateconf/schemas/*.schemas || return 1
	rm -f ${pkgdir}/etc/mateconf/schemas/*.schemas
}
