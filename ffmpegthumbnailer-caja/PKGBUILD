pkgname=ffmpegthumbnailer-caja
pkgver=1.2.0
pkgrel=1
pkgdesc="MateConf schemas to use ffmpegthumbnailer in MATE Caja "
arch=('any')
depends=('mate-conf')
install=ffmpegthumbnailer-caja.install
source=(http://pub.mate-desktop.org/releases/1.2/$pkgname-$pkgver.tar.xz)
sha256sums=('c2e089a5af97006e822d6efbd534740a42473f6cbeed2b172e02a61772e61395')

build() {
    cd "${srcdir}/${pkgname}-$pkgver"
}

package() {
    cd "${srcdir}/${pkgname}-$pkgver"
    make DESTDIR="${pkgdir}" install || return 1
}

